<svg width="400" height="300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="skyGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#87CEEB;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#E0F6FF;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="mountainGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#4A5D23;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#2F3E15;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- 天空背景 -->
  <rect width="400" height="300" fill="url(#skyGradient)"/>
  
  <!-- 云雾 -->
  <ellipse cx="100" cy="80" rx="60" ry="20" fill="white" opacity="0.7"/>
  <ellipse cx="300" cy="60" rx="80" ry="25" fill="white" opacity="0.6"/>
  <ellipse cx="200" cy="120" rx="70" ry="18" fill="white" opacity="0.8"/>
  
  <!-- 远山 -->
  <polygon points="0,200 80,120 160,140 240,100 320,130 400,110 400,300 0,300" fill="url(#mountainGradient)" opacity="0.8"/>
  
  <!-- 近山 -->
  <polygon points="0,250 60,180 120,200 180,160 240,180 300,150 360,170 400,140 400,300 0,300" fill="url(#mountainGradient)"/>
  
  <!-- 庐山建筑轮廓 -->
  <rect x="180" y="190" width="40" height="60" fill="#8B4513" opacity="0.9"/>
  <polygon points="180,190 200,170 220,190" fill="#A0522D"/>
  
  <!-- 文字 -->
  <text x="200" y="280" text-anchor="middle" font-family="serif" font-size="18" fill="#2F4F4F" font-weight="bold">庐山寻踪</text>
</svg>